
{
  "manifest_version": 3,
  "name": "Tab Selector & Copier",
  "version": "1.0",
  "description": "Select tabs and copy their details to the clipboard.",
  "permissions": ["tabs", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
